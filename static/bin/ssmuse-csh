#! /bin/csh
#
# ssmuse-csh
#
# csh front-end to _ssmuse.sh

if ( ${#argv} > 0 ) then
	if ( "${argv[1]}" == "-h" || "${argv[1]}" == "--help" ) then
		#shift
		__ssmuse.py csh -h
	else if ( "${argv[1]}" == "--noeval" ) then
		shift
		__ssmuse.py csh $*
	else
		__ssmuse_tmpfile=`__ssmuse.py csh --tmp $*`
		if ( -r "${__ssmuse_tmpfile}" ) then
			source ${__ssmuse_tmpfile}
			/bin/rm -f ${__ssmuse_tmpfile}
		endif
	endif
endif
